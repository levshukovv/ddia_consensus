{
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "cmake.buildDirectory": "${workspaceFolder}/build",
    "python.analysis.extraPaths": [
        "${workspaceFolder}/src",
        "${workspaceFolder}/lib"
    ],
    "python.testing.pytestArgs": [
        "tests"
    ],
    "files.associations": {
        "*.h": "c",
        "*.hpp": "cpp",
        "*.cpp": "cpp",
        "*.c": "c",
        "*.cc": "cpp",
        "*.cxx": "cpp"
    },
    "search.exclude": {
        "**/build/**": true,
        "**/dist/**": true,
        "**/__pycache__/**": true,
        "**/node_modules/**": true,
        "**/.git/**": true
    },
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/build": false
    }
}
